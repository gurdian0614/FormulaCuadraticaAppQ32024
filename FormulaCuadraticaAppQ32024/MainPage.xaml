<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormulaCuadraticaAppQ32024.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,30" Spacing="10">
            <Label Text="Ingrese el valor de a:" />
            <Entry x:Name="txtA" Keyboard="Numeric" />

            <Label Text="Ingrese el valor de b:" />
            <Entry x:Name="txtB" Keyboard="Numeric" />

            <Label Text="Ingrese el valor de c:" />
            <Entry x:Name="txtC" Keyboard="Numeric" />

            <Label Text="X1:" />
            <Entry x:Name="txtX1" Keyboard="Numeric" IsReadOnly="True" />

            <Label Text="X2:" />
            <Entry x:Name="txtX2" Keyboard="Numeric" IsReadOnly="True" />

            <Button Text="Calcular" x:Name="txtCalcular" BackgroundColor="Green" Clicked="txtCalcular_Clicked" />
            <Button Text="Limpiar" x:Name="txtLimpiar" BackgroundColor="red" Clicked="txtLimpiar_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
